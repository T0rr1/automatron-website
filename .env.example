# Next.js Environment Variables
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://automatron.ai
SITE_URL=https://automatron.ai

# Stripe
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Redis/Celery
REDIS_URL=redis://localhost:6379/0

# OpenAI API for Intelligent Chatbot
OPENAI_API_KEY=your_openai_api_key_here
# Alternative: Use NEXT_PUBLIC_OPENAI_API_KEY for client-side (less secure but simpler for demo)
# NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
CONTACT_EMAIL=contact@yourdomain.com

# Analytics (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=automatron.ai
NEXT_PUBLIC_PLAUSIBLE_HOST=https://plausible.io
NEXT_PUBLIC_SITE_DOMAIN=automatron.ai

# Error Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here
SENTRY_ORG=your_sentry_org_slug
SENTRY_PROJECT=your_sentry_project_slug
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1

# Rate Limiting (Upstash Redis - optional)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Security Configuration
CSRF_SECRET=your_csrf_secret_key_here_32_chars_min
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000

# Legal and Contact Information
PRIVACY_EMAIL=privacy@yourdomain.com
LEGAL_EMAIL=legal@yourdomain.com
SECURITY_EMAIL=security@yourdomain.com
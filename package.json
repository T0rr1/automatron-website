{
  "name": "automatron-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "postbuild": "next-sitemap",
    "sitemap": "next-sitemap",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:accessibility": "vitest --run src/test/accessibility.test.tsx",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "playwright test e2e/visual.spec.ts",
    "test:lighthouse": "lhci autorun",
    "test:lighthouse:collect": "lhci collect",
    "test:lighthouse:assert": "lhci assert",
    "test:all": "npm run test && npm run test:e2e && npm run test:lighthouse",
    "test:production": "node scripts/production-test.js",
    "test:error-handling": "node -e \"console.log('Testing error handling...'); throw new Error('Test error')\"",
    "test:security": "node scripts/test-security.js",
    "test:security:basic": "node scripts/test-security.js --basic",
    "backup": "node scripts/backup.js",
    "validate:env": "node -e \"const required = ['NEXT_PUBLIC_SENTRY_DSN']; required.forEach(key => { if (!process.env[key]) console.warn('Missing:', key); });\"",
    "content:create": "node scripts/content-cli.js create",
    "content:validate": "node scripts/content-cli.js validate",
    "content:list": "node scripts/content-cli.js list",
    "content:translate": "node scripts/content-cli.js translate"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.4",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/nextjs": "^10.15.0",
    "@sentry/react": "^10.15.0",
    "@types/archiver": "^6.0.3",
    "@types/mdx": "^2.0.13",
    "@vercel/og": "^0.8.5",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "framer-motion": "^12.23.21",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.417.0",
    "next": "^15.5.4",
    "next-intl": "^4.3.9",
    "next-mdx-remote": "^5.0.0",
    "next-seo": "^6.8.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.3.0",
    "openai": "^5.23.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.1.0",
    "shiki": "^3.13.0",
    "tailwind-merge": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.5.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.0.3",
    "cross-env": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "happy-dom": "^18.0.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
